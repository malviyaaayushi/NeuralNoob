	if choice==1:
		print("x: ")
		x = int(raw_input())
		ip = [x]
		weight = [-1]
		t = 0
	elif choice==2 or choice==3:
		print("x1: ")
		x1 = int(raw_input())
		print("x2: ")
		x2 = int(raw_input())
		ip = [x1, x2]
		if choice==2:
			weight = [1, 1]
			t = 2
		if choice==3:
			weight = [0.5, 0.5]
			t = 0.5
	else:
		print("Please enter a valid input")
	myModel = McCullochPitts(ip, weight, t)
	myAns = myModel.forwardPropagation()

	print("Output: "+str(myAns))

	

