import McCullochPittsModel
import numpy as np

if __name__ == "__main__":
	if len(sys.argv) != 2:
		print("Usage: <>", file=sys.stderr)
		exit(-1)

	print("Select a model:\n1. NOT\n2. AND\n3. OR\n\nYour choice: ")
	choice  = int(raw_input())
